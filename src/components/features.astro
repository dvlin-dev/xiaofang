import { Icon } from "astro-icon/components";

const features = [
  {
    title: "AI Companion",
    description:
      "Xiaofang is your personal AI companion who remembers your conversations and builds a genuine connection with you.",
    icon: "bx:bxs-heart",
  },
  {
    title: "Health Monitoring",
    description:
      "Track and analyze your health information with Xiaofang's intelligent health monitoring capabilities.",
    icon: "bx:bxs-window-alt",
  },
  {
    title: "Memory System",
    description:
      "Xiaofang remembers your conversations and preferences, creating a more personalized experience over time.",
    icon: "bx:bxs-brain",
  },
  {
    title: "Internet Connected",
    description:
      "Access real-time information and stay updated with Xiaofang's ability to connect to the internet for the latest data.",
    icon: "bx:bxs-network-chart",
  },
  {
    title: "Multi-lingual Support",
    description:
      "Communicate effortlessly with Xiaofang in English and other languages for a natural conversation experience.",
    icon: "bx:bxs-message-rounded-dots",
  },
