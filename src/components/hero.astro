---
import { Picture } from "astro:assets";
import heroImage from "assets/hero.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon/components";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="Astronaut in the air"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      xiaofang - Your AI Health & Life Companion
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      Meet xiaofang, your personal AI companion who remembers your conversations, monitors your health, and helps you live better.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="https://heyxiaofang.com"
        target="_blank"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bx:bxs-cloud-download" />
        Try xiaofang Now
      </Link>
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="https://github.com/dvlin-dev/xiaofang"
        class="flex gap-1 items-center justify-center"
        target="_blank">
        <Icon class="text-black w-4 h-4" name="bx:bxl-github" />
        GitHub Repo
      </Link>
    </div>
    <h2 class="text-4xl md:text-6xl tracking-tight">
      Start your journey with xiaofang today.
    </h2>
    <p class="text-slate-400 mt-4 text-lg md:text-xl">
      Experience the future of AI companionship with personalized health monitoring and meaningful conversations.
    </p>
  </div>
</main>
